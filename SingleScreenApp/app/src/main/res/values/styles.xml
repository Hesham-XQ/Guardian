<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout">
        <item name="android:layout_marginTop">@dimen/margin_top_10</item>
        <item name="android:paddingLeft">@dimen/padding_5</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="image">
        <item name="android:layout_height">@dimen/image_width_height_50</item>
        <item name="android:layout_width">@dimen/image_width_height_50</item>
    </style>

    <style name="textView">
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
